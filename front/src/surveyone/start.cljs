        vdp? (:view-description-project ts false)]
    [:div.col
     [:hr]
     [:div.row
      [:div.col
       [:div.row
        [:div.col
         [:div.row
          [:div.col.text-right
           [:button.btn.btn-outline-success
            {:on-click (fn [e] (r/navigate! :survey))}
            "Пройти тестирование"]]]
         [:div.row
          [:div.col
           [:p.h1 "О проекте"]
           description]]]]]]]))